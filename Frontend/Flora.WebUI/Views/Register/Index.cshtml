@model RegisterDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Kayıt - Matcha Cafe</title>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/webuser/style.css">
</head>
<body>
    <div class="admin-register-container">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="register-form-box">
                        <h2>Yeni Kullanıcı Kaydı</h2>
                        <form id="adminRegisterForm" method="post">
                            <div class="form-floating mb-3" style="--animation-order: 1">
                                <input type="text" class="form-control" id="fullName" placeholder="Adınız" asp-for="Name" required>
                                <label for="fullName"><i class="bi bi-person"></i>Adınız</label>
                            </div>
                            <div class="form-floating mb-3" style="--animation-order: 2">
                                <input type="text" class="form-control" id="fullName" placeholder="Soyadınız" asp-for="Surname" required>
                                <label for="fullName"><i class="bi bi-person"></i>Soyadınız</label>
                            </div>
                            <div class="form-floating mb-3" style="--animation-order: 3">
                                <input type="text" class="form-control" id="username" placeholder="Kullanıcı Adı" asp-for="Username" required>
                                <label for="username"><i class="bi bi-person-badge"></i>Kullanıcı Adı</label>
                            </div>
                            <div class="form-floating mb-3" style="--animation-order: 4">
                                <input type="email" class="form-control" id="email" placeholder="E-posta" asp-for="Mail" required>
                                <label for="email"><i class="bi bi-envelope"></i> E-posta</label>
                            </div>
                            <div class="form-floating mb-3" style="--animation-order: 5">
                                <input type="password" class="form-control" id="password" placeholder="Şifre" asp-for="Password" required>
                                <label for="password"><i class="bi bi-lock"></i> Şifre</label>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-box-arrow-in-right"></i> Kayıt Ol
                            </button>
                        </form>
                        <div class="text-center">
                            <a href="/Login/Index/" class="login-link">
                                <i class="bi bi-arrow-left"></i> Zaten hesabınız var mı? Giriş yapın
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
