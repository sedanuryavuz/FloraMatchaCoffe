@model List<ResultAboutDto>

<section class="py-5 bg-white fullscreen-section">
    <div class="container">
        <div class="row align-items-center">
            <!-- Left Column (Text) -->
            @foreach (var item in Model) {

                <div class="col-lg-5 pe-lg-5 mb-5 mb-lg-0">
                    <h2 class="display-4 fw-light mb-0">@item.Title</h2>
                    <h3 class="display-2 fw-bold mb-4"> @item.Title2</h3>
                    <p class="fs-5 mb-4">
                        @(item.Description?.Length > 100 ? item.Description.Substring(0, 100) + "..." : item.Description)

                    </p>
                    <a class="btn btn-green ms-3" href="/About/Index">Daha Fazlasını Oku</a>

                    <!-- Round Images Row -->
                    <div class="row g-3 mt-4">
                        <div class="col-4">
                            <img src="@item.ImageUrl2" class="rounded-circle img-fluid shadow" alt="Chef">
                        </div>
                        <div class="col-4">
                            <img src="@item.ImageUrl3" class="rounded-circle img-fluid shadow" alt="Food">
                        </div>
                        <div class="col-4">
                            <img src="@item.ImageUrl4" class="rounded-circle img-fluid shadow" alt="Ingredients">
                        </div>
                    </div>

                </div>
                <div class="col-lg-7">
                    <img src="@item.ImageUrl" class="img-fluid shadow" alt="Right Image">
            </div>
            }
        </div>
    </div>
</section>
