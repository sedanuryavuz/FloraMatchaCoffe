@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}


<section class="menu-section py-5 index-menu-bg">
    <div class="container">
        <div class="container mt-5">
            <div class="row">
                <div class="col-12">
                    <h3 class="text-blackalign-content-center mb-4">Mesaj Sayfası</h3>
                </div>
            </div>

            <div class="row p-1">
                <div class="col-2">Kullanıcı Adınız: </div>
                <div class="col-5">
                    <input type="text" id="userinput" class="form-control" />
                </div>
            </div>

            <div class="row p-1">
                <div class="col-2">Mesajınız:</div>
                <div class="col-5">
                    <input type="text" class="form-control" id="messageinput" />
                </div>
            </div>

            <div class="row p-1">
                <div class="col-2"></div>
                <div class="col-3">
                    <input type="button" id="sendbutton" value="Mesaj Gönder" class="btn btn-warning"/>
                </div>
            </div>


            <div class="row p-1">
                <div class="col-12">
                    <hr />
                </div>
            </div>

            <div class="row p-1">
                <div class="col-12">
                    <ul id="messaggelist" class="lit-group"></ul>
                </div>
            </div>

        </div>
    </div>
</section>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.8/signalr.min.js"></script>
<script src="~/js/chat.js"></script>