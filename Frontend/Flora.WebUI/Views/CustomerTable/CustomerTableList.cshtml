@model List<ResultMenuTableDto>
@{
    Layout = "~/Views/UILayout/Index.cshtml";
}
<link rel="stylesheet" href="https://cdn.lineawesome.com/1.3.0/line-awesome/css/line-awesome.min.css">

<div class="container" style="margin-top: 180px; margin-bottom: 150px;">
    <h2 class="mb-2">Masa Listesi</h2>
    <span class="breadcrumb-item active">Masa Seçimi Yapınız</span>
    <div class="row">
        @foreach (var item in Model)
        {
            var color = item.Status ? "bg-danger text-white" : "bg-success text-white";
            var status = item.Status ? "Masa Dolu" : "Masa Boş";

            <div class="col-md-3 mb-4">
                <div class="card @color">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="me-3">
                                @if (item.Status)
                                {
                                    <a href="/Basket/Index/" class="text-white"><i class="fa-solid fa-cash-register fa-2x"></i></a>
                                }
                                else
                                {
                                    <a href="/Menu/Index/@item.MenuTableId" class="text-white"><i class="fas fa-chair fa-2x"></i></a>
                                }
                            </div>
                            <div>
                                <p class="mb-0">@item.Name</p>
                                <small>@status</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
